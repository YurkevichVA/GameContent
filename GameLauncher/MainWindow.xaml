<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLauncher"
        mc:Ignorable="d"
        Title="Start" Height="250" Width="400" FontSize="15"> 
    <Grid>
        <StackPanel 
            Orientation="Vertical" 
            HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button 
            x:Name="PlayerWindow_Btn" Click="PlayerWindow_Btn_Click"
            Width="120" Height="50" Content="Player Window" Margin="0 0 0 10"/>
            <Button
            x:Name="AdminWindow_Btn" Click="AdminWindow_Btn_Click"
            Width="120" Height="50" Content="Admin Window" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
