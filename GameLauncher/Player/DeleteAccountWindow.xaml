<Window x:Class="GameLauncher.Player.DeleteAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLauncher.Player"
        mc:Ignorable="d"
        Title="DeleteAccountWindow" Height="250" Width="400">
    <StackPanel 
        Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label 
                Content="Enter password:" FontSize="15"/>
        <TextBox
                x:Name="Pass_TxtBx"
                Height="30" Width="200" Margin="10"/>
        <StackPanel
            Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button 
                x:Name="Delete" Click="Delete_Click"
                Height="30" Width="100"
                Content="Delete" Margin="5"/>
            <Button
                x:Name="Cancel" Click="Cancel_Click"
                Height="30" Width="100"
                Content="Cancel" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
